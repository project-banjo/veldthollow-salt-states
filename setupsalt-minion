#!/bin/bash

SALT_VERSION=v2015.5.5

wget -O - http://bootstrap.saltstack.org --no-check-certificate | sudo sh -s -- -P git $SALT_VERSION

pushd `dirname $0` > /dev/null
SCRIPT_PATH=`pwd -P`
popd > /dev/null
cp $SCRIPT_PATH/salt/minion /etc/salt/minion

service salt-minion restart

# salt-call state.highstate
